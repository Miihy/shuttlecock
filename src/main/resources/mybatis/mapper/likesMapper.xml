<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.fp.shuttlecock.likes.LikesMapper">
	<insert id="insertLikes" parameterType="LikesDTO">
		insert into likes(userId, bno, likes_type) values(#{userId}, #{bno}, #{likes_type})
	</insert>
	
	<update id="likesIncrease" parameterType="LikesDTO">
		<choose>
			<when test="likes_type == 2">
				update freeboard set `like` = `like` + 1 where freeboardId = #{bno}
			</when>
			<when test="likes_type == 3">
				update tradeboard set `like` = `like` + 1 where tradeboardId = #{bno}
			</when>
			<when test="likes_type == 4">
				update recruitboard set `like` = `like` + 1 where recruitboardId = #{bno}
			</when>
		</choose>
	</update>
	
	<select id="checkLikesList" parameterType="LikesDTO" resultType="_int">
		select count(likesId) from likes where userId = #{userId} and bno = #{bno} and likes_type = #{likes_type}
	</select>
	
	<!-- <update id="likesCancel" parameterType="LikesDTO">
		update likes set delete_yn = 1 where likesId = #{likesId}
	</update> -->
	
	<delete id="likesCancel" parameterType="LikesDTO">
		delete from likes where userId = #{userId} AND bno = #{bno} AND likes_type = #{likes_type}
	</delete>
	
	<update id="likesDecrease" parameterType="LikesDTO">
		<choose>
			<when test="likes_type == 2">
				update freeboard set `like` = `like` - 1 where freeboardId = #{bno}
			</when>
			<when test="likes_type == 3">
				update tradeboard set `like` = `like` - 1 where tradeboardId = #{bno}
			</when>
			<when test="likes_type == 4">
				update recruitboard set `like` = `like` - 1 where recruitboardId = #{bno}
			</when>
		</choose>
	</update>
</mapper>